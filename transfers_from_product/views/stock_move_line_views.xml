<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inhertied Stock Move Line Tree view -->
    <record id="inherit_stock_move_line_tree" model="ir.ui.view">
        <field name="name">inherit.stock.move.line.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="create_uid"/>
            </field>
        </field>
    </record>

    <!-- Inhertied Stock Move Line Form view -->
     <record id="inherit_stock_move_line_form" model="ir.ui.view">
        <field name="name">inherit.stock.move.line.form</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="product_id" position="before">
                <field name="create_uid"/>
            </field>
        </field>
    </record>
</odoo>
